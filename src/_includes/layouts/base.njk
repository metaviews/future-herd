<!doctype html>
<html lang="{{ site.language }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>
      {% if title %}{{ title }} Â· {{ site.title }}{% else %}{{ site.title }}{% endif %}
    </title>

    <meta name="description" content="{{ description or site.description }}" />
    <link rel="stylesheet" href="/assets/css/site.css" />

    <link rel="alternate" type="application/rss+xml" title="{{ site.title }} RSS" href="{{ site.rssUrl }}" />
  </head>

  <body>
    {% include "partials/header.njk" %}

{# Optional: page hero image below the header, before content #}
{% if hero_image %}
  <figure class="page-hero">
    <img src="{{ hero_image }}" alt="{{ hero_alt or '' }}">
  </figure>
{% endif %}

    <main class="wrap">
      {{ content | safe }}
    </main>
    {% include "partials/footer.njk" %}
  </body>
</html>
