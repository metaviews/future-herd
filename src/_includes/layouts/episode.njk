---
layout: layouts/base.njk
---

<article class="episode">

  <header class="episode-header">

    <h1>{{ title }}</h1>

    <p class="small">
      {% if episodeNumber %}Episode {{ episodeNumber }}{% endif %}
      {% if episodeNumber and date %} · {% endif %}
      {% if date %}{{ date | postDate }}{% endif %}
    </p>

    {% if summary %}
      <p class="episode-summary">{{ summary }}</p>
    {% endif %}

    <p class="small">
      <a href="/listen/">Listen to the show</a>
      {% if externalListenUrl %}
        · <a href="{{ externalListenUrl }}">Listen to this episode</a>
      {% endif %}
    </p>

  </header>

  {% if image %}
    <figure class="episode-figure">
      <img
        src="{{ image }}"
        alt="{{ imageAlt or title }}"
        class="episode-image"
        loading="lazy"
      />
      {% if imageCaption %}
        <figcaption class="episode-caption">{{ imageCaption }}</figcaption>
      {% endif %}
    </figure>
  {% endif %}

  <section class="episode-body">
    {{ content | safe }}
  </section>

  {% if links %}
    <section class="episode-links">
      <h2>Links & references</h2>
      <ul>
        {% for l in links %}
          <li><a href="{{ l.url }}">{{ l.title }}</a></li>
        {% endfor %}
      </ul>
    </section>
  {% endif %}

  <footer class="small" style="margin-top: 32px;">
    Prefer a podcast app?
    <a href="/listen/">Follow The Future Herd</a>.
  </footer>

</article>
