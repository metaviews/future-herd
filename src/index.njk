---
layout: layouts/base.njk
title: Home
description: "{{ site.description }}"
---

<section class="hero">
  <h1>{{ site.title }}</h1>
  <p class="tagline">{{ site.description }}</p>

  <div class="card-row">
    <a class="card" href="/episodes/">Browse episodes</a>
    <a class="card" href="{{ site.rssUrl }}">Subscribe (RSS)</a>
  </div>

{% set latest = (collections.episodes | reverse)[0] %}

<section class="latest">
  <h2>Latest episode</h2>

  {% if latest %}
    <div class="latest-card">
      {% if latest.data.image %}
        <a class="latest-thumb" href="{{ latest.url }}">
          <img
            src="{{ latest.data.image }}"
            alt="{{ latest.data.imageAlt or latest.data.title }}"
            loading="lazy"
          />
        </a>
      {% endif %}

      <div class="latest-body">
        <a class="latest-title" href="{{ latest.url }}">{{ latest.data.title }}</a>

        <div class="meta">
          {% if latest.data.episodeNumber %}Ep {{ latest.data.episodeNumber }} Â· {% endif %}
          {% if latest.date %}{{ latest.date | postDate }}{% endif %}
        </div>

        {% if latest.data.summary %}
          <p class="latest-summary">{{ latest.data.summary }}</p>
        {% endif %}

<div style="width: 100%; height: 200px; margin-bottom: 20px; border-radius: 6px; overflow: hidden;"><iframe style="width: 100%; height: 200px;" frameborder="no" scrolling="no" allow="clipboard-write" seamless src="https://player.captivate.fm/show/d9b8c16b-b1b6-43ca-9a42-9d726d63a76d/latest/"></iframe></div>

        <div class="latest-actions">
          {% if latest.data.externalListenUrl %}
            <a class="card" href="{{ latest.data.externalListenUrl }}">Listen</a>
          {% endif %}
          <a class="card" href="{{ latest.url }}">Read notes</a>
          <a class="card" href="/episodes/">All episodes</a>
        </div>
      </div>
    </div>
  {% else %}
    <p class="small">
      Episodes will appear here once the first one is published. For now, you can subscribe via
      <a href="{{ site.rssUrl }}">RSS</a>.
    </p>
  {% endif %}
</section>

<section class="home-visual">
  <img
    src="/assets/img/futureherdcirclelogo.png"
    alt="The Future Herd logo"
    class="home-image"
  />
</section>

